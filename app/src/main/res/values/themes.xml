<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.OTech" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Material Design 3 Colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="android:colorBackground">@color/backgroundColor</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorError">@color/colorError</item>
        
        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.OTech" parent="Base.Theme.OTech" />
    
    <!-- Custom MaterialButton Style -->
    <style name="Widget.OTech.Button" parent="Widget.Material3.Button">
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <style name="Widget.OTech.Button.Primary" parent="Widget.OTech.Button">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
    </style>
    
    <style name="Widget.OTech.Button.Secondary" parent="Widget.OTech.Button">
        <item name="backgroundTint">@color/colorSecondary</item>
        <item name="android:textColor">@color/colorOnSecondary</item>
    </style>
    
    <!-- Custom MaterialCardView Style -->
    <style name="Widget.OTech.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">12dp</item>
    </style>
    
    <!-- Custom BottomNavigationView Style -->
    <style name="Widget.OTech.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/white</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:elevation">0dp</item>
        <item name="itemRippleColor">@color/gray_light</item>
    </style>
    
    <!-- TextInputLayout Style -->
    <style name="Widget.OTech.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="hintTextColor">@color/colorPrimary</item>
    </style>
</resources>