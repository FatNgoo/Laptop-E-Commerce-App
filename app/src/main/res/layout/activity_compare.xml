<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundColor"
    android:fitsSystemWindows="true">

    <!-- Toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            app:titleTextColor="@color/text_primary"
            app:navigationIcon="@drawable/ic_back"
            app:navigationIconTint="@color/text_primary"
            app:title="So sánh sản phẩm" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Select Product Card (Initially Visible) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSelectProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Chọn sản phẩm để so sánh"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tìm kiếm và lọc sản phẩm để so sánh"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="12dp" />

                    <!-- Search Bar -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Tìm kiếm sản phẩm"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        app:startIconDrawable="@drawable/ic_search"
                        app:endIconMode="clear_text"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etSearch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:maxLines="1" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Filter Chips -->
                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroupFilter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:singleSelection="true"
                        app:selectionRequired="false">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipAll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tất cả"
                            android:checked="true"
                            style="@style/Widget.Material3.Chip.Filter" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipSameCategory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cùng danh mục"
                            style="@style/Widget.Material3.Chip.Filter" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipGaming"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gaming"
                            style="@style/Widget.Material3.Chip.Filter" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipOffice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Văn phòng"
                            style="@style/Widget.Material3.Chip.Filter" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipThin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mỏng nhẹ"
                            style="@style/Widget.Material3.Chip.Filter" />

                    </com.google.android.material.chip.ChipGroup>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvSelectProduct"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Compare View (Initially Hidden) -->
            <LinearLayout
                android:id="@+id/layoutCompareView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- Product Headers -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:weightSum="2">

                        <!-- Product 1 Header -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginEnd="4dp">

                            <ImageView
                                android:id="@+id/ivProduct1"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:scaleType="centerCrop"
                                android:background="@color/gray_light" />

                            <TextView
                                android:id="@+id/tvProduct1Brand"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="ASUS"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary"
                                android:gravity="center"
                                android:layout_marginTop="8dp" />

                            <TextView
                                android:id="@+id/tvProduct1Name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Product 1"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                android:gravity="center"
                                android:maxLines="2"
                                android:ellipsize="end"
                                android:layout_marginTop="4dp" />

                            <TextView
                                android:id="@+id/tvProduct1Price"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="25.990.000₫"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/colorPriceRed"
                                android:gravity="center"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <!-- Product 2 Header -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginStart="4dp">

                            <ImageView
                                android:id="@+id/ivProduct2"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:scaleType="centerCrop"
                                android:background="@color/gray_light" />

                            <TextView
                                android:id="@+id/tvProduct2Brand"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Dell"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary"
                                android:gravity="center"
                                android:layout_marginTop="8dp" />

                            <TextView
                                android:id="@+id/tvProduct2Name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Product 2"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                android:gravity="center"
                                android:maxLines="2"
                                android:ellipsize="end"
                                android:layout_marginTop="4dp" />

                            <TextView
                                android:id="@+id/tvProduct2Price"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="22.990.000₫"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/colorPriceRed"
                                android:gravity="center"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Swap Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSwapProducts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hoán đổi vị trí"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/ic_compare"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="8dp" />

                <!-- Specifications Comparison Table -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Header -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Thông số kỹ thuật"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:padding="16dp"
                            android:background="@color/backgroundColor" />

                        <!-- CPU Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="12dp"
                            android:weightSum="3">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="CPU"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary" />

                            <TextView
                                android:id="@+id/tvProduct1Cpu"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Intel i5"
                                android:textSize="13sp"
                                android:textColor="@color/text_primary"
                                android:gravity="center"
                                android:paddingHorizontal="4dp" />

                            <TextView
                                android:id="@+id/tvProduct2Cpu"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Intel i7"
                                android:textSize="13sp"
                                android:textColor="@color/text_primary"
                                android:gravity="center"
                                android:paddingHorizontal="4dp" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/backgroundColor" />

                        <!-- RAM Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="12dp"
                            android:weightSum="3">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="RAM"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary" />

                            <TextView
                                android:id="@+id/tvProduct1Ram"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="8GB"
                                android:textSize="13sp"
                                android:textColor="@color/text_primary"
                                android:gravity="center"
                                android:paddingHorizontal="4dp" />

                            <TextView
                                android:id="@+id/tvProduct2Ram"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="16GB"
                                android:textSize="13sp"
                                android:textColor="@color/text_primary"
                                android:gravity="center"
                                android:paddingHorizontal="4dp" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/backgroundColor" />

                        <!-- Storage Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="12dp"
                            android:weightSum="3">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Ổ cứng"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary" />

                            <TextView
                                android:id="@+id/tvProduct1Storage"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="256GB SSD"
                                android:textSize="13sp"
                                android:textColor="@color/text_primary"
                                android:gravity="center"
                                android:paddingHorizontal="4dp" />

                            <TextView
                                android:id="@+id/tvProduct2Storage"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="512GB SSD"
                                android:textSize="13sp"
                                android:textColor="@color/text_primary"
                                android:gravity="center"
                                android:paddingHorizontal="4dp" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/backgroundColor" />

                        <!-- Screen Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="12dp"
                            android:weightSum="3">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Màn hình"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary" />

                            <TextView
                                android:id="@+id/tvProduct1Screen"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="15.6 inch FHD"
                                android:textSize="13sp"
                                android:textColor="@color/text_primary"
                                android:gravity="center"
                                android:paddingHorizontal="4dp" />

                            <TextView
                                android:id="@+id/tvProduct2Screen"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="14 inch 4K"
                                android:textSize="13sp"
                                android:textColor="@color/text_primary"
                                android:gravity="center"
                                android:paddingHorizontal="4dp" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/backgroundColor" />

                        <!-- Graphics Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="12dp"
                            android:weightSum="3">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Card đồ họa"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary" />

                            <TextView
                                android:id="@+id/tvProduct1Graphics"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Intel UHD"
                                android:textSize="13sp"
                                android:textColor="@color/text_primary"
                                android:gravity="center"
                                android:paddingHorizontal="4dp" />

                            <TextView
                                android:id="@+id/tvProduct2Graphics"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="NVIDIA GTX"
                                android:textSize="13sp"
                                android:textColor="@color/text_primary"
                                android:gravity="center"
                                android:paddingHorizontal="4dp" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/backgroundColor" />

                        <!-- Battery Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="12dp"
                            android:weightSum="3">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Pin"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary" />

                            <TextView
                                android:id="@+id/tvProduct1Battery"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="50Wh"
                                android:textSize="13sp"
                                android:textColor="@color/text_primary"
                                android:gravity="center"
                                android:paddingHorizontal="4dp" />

                            <TextView
                                android:id="@+id/tvProduct2Battery"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="60Wh"
                                android:textSize="13sp"
                                android:textColor="@color/text_primary"
                                android:gravity="center"
                                android:paddingHorizontal="4dp" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/backgroundColor" />

                        <!-- Weight Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="12dp"
                            android:weightSum="3">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Trọng lượng"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary" />

                            <TextView
                                android:id="@+id/tvProduct1Weight"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="1.8kg"
                                android:textSize="13sp"
                                android:textColor="@color/text_primary"
                                android:gravity="center"
                                android:paddingHorizontal="4dp" />

                            <TextView
                                android:id="@+id/tvProduct2Weight"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="1.2kg"
                                android:textSize="13sp"
                                android:textColor="@color/text_primary"
                                android:gravity="center"
                                android:paddingHorizontal="4dp" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/backgroundColor" />

                        <!-- OS Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="12dp"
                            android:weightSum="3">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Hệ điều hành"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary" />

                            <TextView
                                android:id="@+id/tvProduct1Os"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Windows 11"
                                android:textSize="13sp"
                                android:textColor="@color/text_primary"
                                android:gravity="center"
                                android:paddingHorizontal="4dp" />

                            <TextView
                                android:id="@+id/tvProduct2Os"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Windows 11"
                                android:textSize="13sp"
                                android:textColor="@color/text_primary"
                                android:gravity="center"
                                android:paddingHorizontal="4dp" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Action Buttons for Product 1 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sản phẩm 1"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:layout_marginBottom="8dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnViewProduct1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Xem"
                                style="@style/Widget.Material3.Button.OutlinedButton"
                                app:cornerRadius="8dp"
                                android:layout_marginEnd="4dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnAddProduct1ToCart"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Giỏ hàng"
                                style="@style/Widget.Material3.Button.OutlinedButton"
                                app:cornerRadius="8dp"
                                android:layout_marginHorizontal="4dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnBuyProduct1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Mua ngay"
                                app:cornerRadius="8dp"
                                android:backgroundTint="@color/colorPrimary"
                                android:layout_marginStart="4dp" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Action Buttons for Product 2 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sản phẩm 2"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:layout_marginBottom="8dp" />

                        <LinearLayout
