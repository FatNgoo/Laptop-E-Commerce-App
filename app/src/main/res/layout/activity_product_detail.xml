<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <!-- Toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            app:titleTextColor="@color/text_primary"
            app:navigationIcon="@drawable/ic_back"
            app:navigationIconTint="@color/text_primary"
            app:title="Chi tiết sản phẩm" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Product Image Gallery -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp"
                android:layout_marginBottom="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/vpProductImages"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/gray_light" />

                    <!-- Image Indicator -->
                    <LinearLayout
                        android:id="@+id/layoutIndicators"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal"
                        android:padding="8dp"
                        android:background="#80000000" />

                    <!-- Favorite Button -->
                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fabFavorite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="16dp"
                        android:src="@drawable/ic_favorite_border"
                        app:tint="#E91E63"
                        app:fabSize="mini"
                        app:backgroundTint="@color/white" />

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Product Info Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvBrand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ASUS"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvProductName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dell XPS 13 9310"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="8dp" />

                    <!-- Rating -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <RatingBar
                            android:id="@+id/ratingBar"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:rating="4.5"
                            android:isIndicator="true" />

                        <TextView
                            android:id="@+id/tvRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.5"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:layout_marginStart="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/ 5.0"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginStart="2dp" />

                        <TextView
                            android:id="@+id/tvSoldCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Đã bán: 150"
                            android:textSize="13sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginStart="16dp" />

                        <TextView
                            android:id="@+id/tvStock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Còn lại: 50"
                            android:textSize="13sp"
                            android:textColor="@color/colorSecondary"
                            android:textStyle="bold"
                            android:layout_marginStart="16dp" />
                    </LinearLayout>

                    <!-- Price Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="25.990.000₫"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPriceRed" />

                        <TextView
                            android:id="@+id/tvOldPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="29.990.000₫"
                            android:textSize="16sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginStart="12dp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tvDiscount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-13%"
                            android:textSize="14sp"
                            android:textColor="@color/colorSecondary"
                            android:textStyle="bold"
                            android:background="@color/gray_light"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp"
                            android:layout_marginStart="8dp"
                            android:visibility="gone" />
                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Description Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mô tả sản phẩm"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Laptop gaming hiệu năng cao..."
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"
                        android:lineSpacingExtra="4dp"
                        android:maxLines="4"
                        android:ellipsize="end" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnToggleDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Xem thêm"
                        android:textSize="13sp"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginTop="8dp"
                        android:padding="0dp"
                        android:minHeight="0dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Specs Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thông số kỹ thuật"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="12dp" />

                    <!-- CPU -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="CPU"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvSpecCpu"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Intel Core i7-13700H"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- RAM -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="RAM"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvSpecRam"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="16GB DDR5"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Storage -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Ổ cứng"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvSpecStorage"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="512GB NVMe SSD"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- GPU -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Card đồ họa"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvSpecGpu"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="RTX 4060 8GB"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Display -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Màn hình"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvSpecDisplay"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="16&quot; FHD 165Hz"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Ratings & Reviews Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Đánh giá &amp; Nhận xét"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnWriteReview"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="Viết đánh giá"
                            android:textSize="13sp"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            app:cornerRadius="8dp"
                            android:paddingHorizontal="12dp"
                            app:strokeColor="@color/colorPrimary"
                            android:textColor="@color/colorPrimary" />

                    </LinearLayout>

                    <!-- Rating Summary -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@color/white"
                        android:padding="16dp"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvAverageRating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4.5"
                                android:textSize="36sp"
                                android:textStyle="bold"
                                android:textColor="@color/colorSecondary" />

                            <RatingBar
                                android:id="@+id/rbAverageRating"
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:numStars="5"
                                android:rating="4.5"
                                android:isIndicator="true"
                                android:layout_marginTop="4dp" />

                            <TextView
                                android:id="@+id/tvTotalReviews"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="128 đánh giá"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="80dp"
                            android:background="@color/gray_medium"
                            android:alpha="0.3"
                            android:layout_marginHorizontal="16dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <!-- 5 Stars -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="4dp">

                                <TextView
                                    android:layout_width="30dp"
                                    android:layout_height="wrap_content"
                                    android:text="5★"
                                    android:textSize="12sp"
                                    android:textColor="@color/colorSecondary" />

                                <ProgressBar
                                    android:id="@+id/pbRating5"
                                    android:layout_width="0dp"
                                    android:layout_height="8dp"
                                    android:layout_weight="1"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:progress="0"
                                    android:max="100"
                                    android:progressTint="@color/colorSecondary"
                                    android:layout_marginHorizontal="4dp" />

                                <TextView
                                    android:id="@+id/tvRating5Count"
                                    android:layout_width="30dp"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="11sp"
                                    android:textColor="@color/gray_medium"
                                    android:gravity="end" />

                            </LinearLayout>

                            <!-- 4 Stars -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="4dp">

                                <TextView
                                    android:layout_width="30dp"
                                    android:layout_height="wrap_content"
                                    android:text="4★"
                                    android:textSize="12sp"
                                    android:textColor="@color/colorSecondary" />

                                <ProgressBar
                                    android:id="@+id/pbRating4"
                                    android:layout_width="0dp"
                                    android:layout_height="8dp"
                                    android:layout_weight="1"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:progress="0"
                                    android:max="100"
                                    android:progressTint="@color/colorSecondary"
                                    android:layout_marginHorizontal="4dp" />

                                <TextView
                                    android:id="@+id/tvRating4Count"
                                    android:layout_width="30dp"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="11sp"
                                    android:textColor="@color/gray_medium"
                                    android:gravity="end" />

                            </LinearLayout>

                            <!-- 3 Stars -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="4dp">

                                <TextView
                                    android:layout_width="30dp"
                                    android:layout_height="wrap_content"
                                    android:text="3★"
                                    android:textSize="12sp"
                                    android:textColor="@color/colorSecondary" />

                                <ProgressBar
                                    android:id="@+id/pbRating3"
                                    android:layout_width="0dp"
                                    android:layout_height="8dp"
                                    android:layout_weight="1"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:progress="0"
                                    android:max="100"
                                    android:progressTint="@color/colorSecondary"
                                    android:layout_marginHorizontal="4dp" />

                                <TextView
                                    android:id="@+id/tvRating3Count"
                                    android:layout_width="30dp"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="11sp"
                                    android:textColor="@color/gray_medium"
                                    android:gravity="end" />

                            </LinearLayout>

                            <!-- 2 Stars -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="4dp">

                                <TextView
                                    android:layout_width="30dp"
                                    android:layout_height="wrap_content"
                                    android:text="2★"
                                    android:textSize="12sp"
                                    android:textColor="@color/colorSecondary" />

                                <ProgressBar
                                    android:id="@+id/pbRating2"
                                    android:layout_width="0dp"
                                    android:layout_height="8dp"
                                    android:layout_weight="1"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:progress="0"
                                    android:max="100"
                                    android:progressTint="@color/colorSecondary"
                                    android:layout_marginHorizontal="4dp" />

                                <TextView
                                    android:id="@+id/tvRating2Count"
                                    android:layout_width="30dp"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="11sp"
                                    android:textColor="@color/gray_medium"
                                    android:gravity="end" />

                            </LinearLayout>

                            <!-- 1 Star -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <TextView
                                    android:layout_width="30dp"
                                    android:layout_height="wrap_content"
                                    android:text="1★"
                                    android:textSize="12sp"
                                    android:textColor="@color/colorSecondary" />

                                <ProgressBar
                                    android:id="@+id/pbRating1"
                                    android:layout_width="0dp"
                                    android:layout_height="8dp"
                                    android:layout_weight="1"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:progress="0"
                                    android:max="100"
                                    android:progressTint="@color/colorSecondary"
                                    android:layout_marginHorizontal="4dp" />

                                <TextView
                                    android:id="@+id/tvRating1Count"
                                    android:layout_width="30dp"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="11sp"
                                    android:textColor="@color/gray_medium"
                                    android:gravity="end" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Reviews List -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvReviews"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        tools:listitem="@layout/item_review" />

                    <!-- View More Reviews Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnViewMoreReviews"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Xem thêm đánh giá"
                        android:textSize="14sp"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginTop="8dp"
                        android:visibility="gone" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Related Products Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sản phẩm liên quan"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginBottom="12dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvRelatedProducts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:orientation="horizontal"
                        tools:listitem="@layout/item_product" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Action Buttons -->
    <LinearLayout
        android:id="@+id/layoutBottomActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@color/white"
        android:elevation="0dp">

        <!-- Available Buttons -->
        <LinearLayout
            android:id="@+id/layoutAvailableButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddToCart"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:text="Thêm giỏ hàng"
                android:textSize="15sp"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:cornerRadius="12dp"
                android:layout_marginEnd="6dp"
                app:strokeColor="@color/colorPrimary"
                app:strokeWidth="2dp"
                android:textColor="@color/colorPrimary"
                app:icon="@drawable/ic_shopping_cart"
                app:iconGravity="textStart"
                app:iconSize="20dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBuyNow"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:text="Mua ngay"
                android:textSize="15sp"
                app:cornerRadius="12dp"
                android:layout_marginStart="6dp"
                android:backgroundTint="@color/colorPrimary"
                app:icon="@drawable/ic_check"
                app:iconGravity="textStart"
                app:iconSize="20dp" />

        </LinearLayout>

        <!-- Out of Stock Message -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardOutOfStock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/colorPriceRed"
            app:cardBackgroundColor="#FFEBEE"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    
                    app:tint="@color/colorPriceRed" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sản phẩm hiện đang hết hàng"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPriceRed"
                    android:layout_marginStart="12dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</LinearLayout>
