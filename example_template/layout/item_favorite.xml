<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Product Image -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp">

            <ImageView
                android:id="@+id/favorite_product_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/simple_background"
                android:contentDescription="Product Image" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Product Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/favorite_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Laptop Dell XPS 13"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:maxLines="2"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/favorite_product_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Intel Core i7, 16GB RAM, 512GB SSD"
                android:textSize="13sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/favorite_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25.990.000₫"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <!-- Add to Cart Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_to_cart"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Thêm"
                android:textSize="12sp"
                app:cornerRadius="8dp"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_marginBottom="8dp"
                android:minWidth="0dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />

            <!-- Remove from Favorites Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_remove_favorite"
                android:layout_width="36dp"
                android:layout_height="36dp"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:icon="@drawable/ic_delete"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="20dp"
                app:iconTint="@color/error"
                app:cornerRadius="8dp"
                app:strokeColor="@color/error"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

